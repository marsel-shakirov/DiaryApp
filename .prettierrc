{
	"printWidth": 80,
	"tabWidth": 2,
	"useTabs": true,
	"semi": false,
	"singleQuote": true,
	"jsxSingleQuote": false,
	"trailingComma": "es5",
	"arrowParens": "always",
	"plugins": [
		"@trivago/prettier-plugin-sort-imports",
		"prettier-plugin-css-order"
	],
	"importOrder": [
		"^[react]$",
		"^@/app/(.*)[^.css]",
		"^@/pages",
		"^@/widgets",
		"^@/shared",
		".svg$",
		".types$",
		".css$"
	],
	"importOrderSeparation": true,
	"importOrderSortSpecifiers": true
}
